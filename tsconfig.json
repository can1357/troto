{
	"include": ["lib/**/*.ts", "lib/**/*.js", "lib/**/*.cjs"],
	"compilerOptions": {
		"lib": ["esnext"],
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"strict": true,
		"outDir": "./dist",
		"rootDir": "./lib",
		"sourceMap": true,
		"skipLibCheck": true,
		"allowJs": true
	}
}
